{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rideshare-platform.example.com/schemas/surge_update_event.json",
  "title": "Surge Update Event",
  "description": "Surge pricing update for a zone",
  "type": "object",
  "required": [
    "event_id",
    "zone_id",
    "timestamp",
    "previous_multiplier",
    "new_multiplier",
    "available_drivers",
    "pending_requests"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event"
    },
    "zone_id": {
      "type": "string",
      "description": "Zone identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the surge update"
    },
    "previous_multiplier": {
      "type": "number",
      "minimum": 1.0,
      "description": "Previous surge multiplier"
    },
    "new_multiplier": {
      "type": "number",
      "minimum": 1.0,
      "description": "New surge multiplier"
    },
    "available_drivers": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of available drivers in the zone"
    },
    "pending_requests": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of pending trip requests in the zone"
    },
    "calculation_window_seconds": {
      "type": "integer",
      "default": 60,
      "description": "Time window used for surge calculation"
    }
  }
}
