{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rideshare-platform.example.com/schemas/rating_event.json",
  "title": "Rating Event",
  "description": "Rating submitted after trip completion",
  "type": "object",
  "required": [
    "event_id",
    "trip_id",
    "timestamp",
    "rater_type",
    "rater_id",
    "ratee_type",
    "ratee_id",
    "rating"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event"
    },
    "trip_id": {
      "type": "string",
      "format": "uuid",
      "description": "Trip identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the rating"
    },
    "rater_type": {
      "type": "string",
      "enum": ["rider", "driver"],
      "description": "Type of entity giving the rating"
    },
    "rater_id": {
      "type": "string",
      "description": "ID of the entity giving the rating"
    },
    "ratee_type": {
      "type": "string",
      "enum": ["rider", "driver"],
      "description": "Type of entity being rated"
    },
    "ratee_id": {
      "type": "string",
      "description": "ID of the entity being rated"
    },
    "rating": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Rating value (1-5 stars)"
    }
  }
}
