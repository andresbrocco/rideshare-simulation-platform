{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rideshare-platform.example.com/schemas/driver_status_event.json",
  "title": "Driver Status Event",
  "description": "Driver status change event",
  "type": "object",
  "required": [
    "event_id",
    "driver_id",
    "timestamp",
    "new_status",
    "trigger",
    "location"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event"
    },
    "driver_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the driver"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the status change"
    },
    "previous_status": {
      "type": ["string", "null"],
      "description": "Previous driver status"
    },
    "new_status": {
      "type": "string",
      "enum": ["available", "offline", "en_route_pickup", "on_trip"],
      "description": "New driver status"
    },
    "trigger": {
      "type": "string",
      "description": "What triggered the status change"
    },
    "location": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "Driver's current location [latitude, longitude]"
    },
    "session_id": {
      "type": ["string", "null"],
      "description": "Simulation run identifier"
    },
    "correlation_id": {
      "type": ["string", "null"],
      "description": "Primary correlation ID (e.g., trip_id)"
    },
    "causation_id": {
      "type": ["string", "null"],
      "description": "ID of event that caused this one"
    }
  }
}
