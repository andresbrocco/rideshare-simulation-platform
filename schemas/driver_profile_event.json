{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rideshare-platform.example.com/schemas/driver_profile_event.json",
  "title": "Driver Profile Event",
  "description": "Driver profile creation or update",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "driver_id",
    "timestamp",
    "first_name",
    "last_name",
    "email",
    "phone",
    "home_location",
    "preferred_zones",
    "shift_preference",
    "vehicle_make",
    "vehicle_model",
    "vehicle_year",
    "license_plate"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event"
    },
    "event_type": {
      "type": "string",
      "enum": ["driver.created", "driver.updated"],
      "description": "Type of profile event"
    },
    "driver_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the driver"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the event"
    },
    "first_name": {
      "type": "string",
      "description": "Driver's first name"
    },
    "last_name": {
      "type": "string",
      "description": "Driver's last name"
    },
    "email": {
      "type": "string",
      "description": "Driver's email address"
    },
    "phone": {
      "type": "string",
      "description": "Driver's phone number"
    },
    "home_location": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "Driver's home location [latitude, longitude]"
    },
    "preferred_zones": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of preferred zone IDs"
    },
    "shift_preference": {
      "type": "string",
      "enum": ["morning", "afternoon", "evening", "night", "flexible"],
      "description": "Driver's preferred shift time"
    },
    "vehicle_make": {
      "type": "string",
      "description": "Vehicle manufacturer"
    },
    "vehicle_model": {
      "type": "string",
      "description": "Vehicle model"
    },
    "vehicle_year": {
      "type": "integer",
      "minimum": 1900,
      "description": "Vehicle year of manufacture"
    },
    "license_plate": {
      "type": "string",
      "description": "Vehicle license plate number"
    },
    "session_id": {
      "type": ["string", "null"],
      "description": "Simulation run identifier"
    },
    "correlation_id": {
      "type": ["string", "null"],
      "description": "Primary correlation ID (e.g., trip_id)"
    },
    "causation_id": {
      "type": ["string", "null"],
      "description": "ID of event that caused this one"
    }
  }
}
